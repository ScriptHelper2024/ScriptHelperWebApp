{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/webapp",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Frontend: Generate Types",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "types-generate"
            ],
            "cwd": "${workspaceFolder}/webapp",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug seedDatabase",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/cmd.py",
            "args": [
                "seedDatabase"
            ],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/run.py",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/agent/src/agent.py",
            "cwd": "${workspaceFolder}/agent",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/agent/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug Frontend/Backend/Agent Components",
            "configurations": ["Debug Frontend", "Debug Backend", "Debug Agent"]
        }
    ]
}
